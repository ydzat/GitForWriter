{
  "name": "gitforwriter",
  "displayName": "GitForWriter",
  "description": "AI-assisted writing workflow with Git-like version control for Markdown and LaTeX",
  "version": "1.0.0",
  "publisher": "gitforwriter",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:latex"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitforwriter.startProject",
        "title": "GitForWriter: Start Writing Project"
      },
      {
        "command": "gitforwriter.aiReview",
        "title": "GitForWriter: AI Review"
      },
      {
        "command": "gitforwriter.exportDraft",
        "title": "GitForWriter: Export Draft"
      }
    ],
    "configuration": {
      "title": "GitForWriter",
      "properties": {
        "gitforwriter.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect Git diff on save"
        },
        "gitforwriter.exportFormat": {
          "type": "string",
          "enum": [
            "markdown",
            "latex",
            "pdf"
          ],
          "default": "markdown",
          "description": "Default export format"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "clean": "rimraf out",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile",
    "test": "npm run test:unit",
    "test:unit": "mocha --require ts-node/register 'src/test/unit/**/*.test.ts'",
    "test:coverage": "nyc --reporter=text --reporter=html npm run test:unit",
    "test:integration": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.0.0",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^6.2.0",
    "eslint": "^8.0.0",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "simple-git": "^3.19.0",
    "uuid": "^13.0.0"
  },
  "license": "MIT"
}
