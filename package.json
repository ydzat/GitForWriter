{
  "name": "gitforwriter",
  "displayName": "GitForWriter",
  "description": "AI-assisted writing workflow with Git-like version control for Markdown and LaTeX",
  "version": "1.0.0",
  "publisher": "gitforwriter",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:latex"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitforwriter.startProject",
        "title": "GitForWriter: Start Writing Project"
      },
      {
        "command": "gitforwriter.aiReview",
        "title": "GitForWriter: AI Review"
      },
      {
        "command": "gitforwriter.exportDraft",
        "title": "GitForWriter: Export Draft"
      }
    ],
    "configuration": {
      "title": "GitForWriter",
      "properties": {
        "gitforwriter.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect Git diff on save"
        },
        "gitforwriter.exportFormat": {
          "type": "string",
          "enum": ["markdown", "latex", "pdf"],
          "default": "markdown",
          "description": "Default export format"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "clean": "rm -rf out",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "simple-git": "^3.19.0"
  },
  "license": "MIT"
}
