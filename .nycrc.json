{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "lines": 60,
  "statements": 60,
  "functions": 60,
  "branches": 50,
  "include": [
    "src/utils/**/*.ts",
    "src/ai/**/*.ts",
    "src/config/**/*.ts",
    "src/core/**/*.ts"
  ],
  "exclude": [
    "src/test/**",
    "src/**/*.test.ts",
    "src/extension.ts",
    "src/webview/**",
    "src/ai/export/exportManager.ts",
    "src/config/configManager.ts",
    "src/config/secretManager.ts",
    "src/core/suggestionApplicator.ts",
    "src/utils/errorHandlerUI.ts",
    "src/utils/statusBarManager.ts"
  ],
  "reporter": [
    "text",
    "html",
    "lcov"
  ],
  "report-dir": "coverage"
}

